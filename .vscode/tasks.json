{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo",
      "args": ["build"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cargo test",
      "type": "shell",
      "command": "cargo",
      "args": ["test"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "cargo check",
      "type": "shell",
      "command": "cargo",
      "args": ["check"],
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "cargo clippy",
      "type": "shell",
      "command": "cargo",
      "args": ["clippy"],
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "cargo fmt",
      "type": "shell",
      "command": "cargo",
      "args": ["fmt"],
      "problemMatcher": []
    },
    {
      "label": "cargo llvm-cov",
      "type": "shell",
      "command": "cargo",
      "args": [
        "llvm-cov",
        "--features",
        "test",
        "--lcov",
        "--output-path",
        "coverage/lcov.info"
      ],
      "problemMatcher": ["$rustc"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
